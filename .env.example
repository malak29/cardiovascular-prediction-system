# =================================
# CARDIOVASCULAR PREDICTION SYSTEM
# Environment Configuration
# =================================

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production
API_VERSION=v1

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cardiovascular_db
POSTGRES_USER=cvd_user
POSTGRES_PASSWORD=cvd_secure_password_2024
DATABASE_URL=postgresql://cvd_user:cvd_secure_password_2024@postgres:5432/cardiovascular_db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Security & Authentication
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0
REACT_APP_SENTRY_DSN=

# External APIs
CDC_API_BASE_URL=https://data.cdc.gov/api
CDC_API_KEY=
MEDICARE_API_BASE_URL=
MEDICARE_API_KEY=

# ML Model Configuration
MODEL_VERSION=1.0.0
MODEL_RETRAIN_SCHEDULE=0 2 * * 0  # Every Sunday at 2 AM
MODEL_PERFORMANCE_THRESHOLD=0.85
AUTO_RETRAIN=false

# File Storage
DATA_STORAGE_PATH=/app/data
MODEL_STORAGE_PATH=/app/ml_models
UPLOAD_MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=csv,json,parquet

# Monitoring & Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=true
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=30

# Grafana Configuration
GRAFANA_PASSWORD=admin
GRAFANA_USER=admin

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=noreply@yourcompany.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *  # Daily at 1 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Development & Testing
RUN_MIGRATIONS=true
SEED_DATABASE=false
TEST_DATABASE_URL=postgresql://cvd_user:cvd_secure_password_2024@postgres:5432/cardiovascular_test_db

# Production Overrides (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://yourdomain.com"]
# REACT_APP_API_URL=https://api.yourdomain.com
# AUTO_RETRAIN=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=30